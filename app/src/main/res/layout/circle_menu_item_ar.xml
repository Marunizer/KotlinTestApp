<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="8.2dp"
    android:paddingRight="8.2dp">

    <com.joooonho.SelectableRoundedImageView
        android:id="@+id/circle_image"
        android:src="@drawable/noni_icon"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        app:sriv_border_color="@android:color/white"
        app:sriv_border_width="2dp"
        app:sriv_oval="true" />
    <!--was 66 size for 5 small circles-->

    <TextView
        android:id="@+id/circle_text"
        android:layout_marginTop="2dp"
        android:shadowColor="#7F000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="4"
        android:textStyle="bold"
        android:layout_width="86dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:maxLines="2"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

</LinearLayout>