    <android.support.constraint.ConstraintLayout
        android:id="@+id/button_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/select_item_layout">

        <Button
            android:id="@+id/switch_button"
            android:layout_width="110dp"
            android:layout_height="36dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:background="@drawable/rounded_button"
            android:foregroundGravity="center"
            android:maxLines="1"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="@id/button_bar_layout"
            />

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:id="@+id/select_item_layout"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">

        <!--android:background="@drawable/cast_expanded_controller_bg_gradient_light"-->

        <android.support.v7.widget.RecyclerView
            android:id="@+id/circle_item_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:scrollbars="horizontal">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>