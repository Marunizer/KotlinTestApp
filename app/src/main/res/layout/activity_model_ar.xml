<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/sceneform_button_fragment"
        android:name="com.google.ar.sceneform.ux.ArFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floating_back_ar_button"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:foreground="@drawable/ic_keyboard_arrow_up_black_24dp"
        android:rotation="270"
        app:backgroundTint="@android:color/white"
        tools:fabSize="auto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="onBackClick"/>


    <LinearLayout
        android:id="@+id/title_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layoutDirection="rtl"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/item_text_ar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:visibility="gone"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:layout_marginStart="16dp"
        android:layoutDirection="rtl" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layoutDirection="rtl"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/title_bar_layout">

        <TextView
            android:id="@+id/item_cost_ar"
            android:visibility="gone"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintRight_toRightOf="parent"/>

        <Button
            android:id="@+id/order_ar_button"
            android:layout_width="110dp"
            android:visibility="gone"
            android:fontFamily="@font/avenir_lt_std_medium"
            android:layout_height="36dp"
            android:layout_marginStart="16dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:background="@drawable/rounded_button_order_ar"
            android:foregroundGravity="center"
            android:maxLines="1"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:text="@string/order_now_btn"
            app:layout_constraintRight_toLeftOf="@id/item_cost"
            />

        <Button
            android:id="@+id/share_ar_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:text="f"
            android:textStyle="bold"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:background="@drawable/rounded_button_share_ar"
            android:foregroundGravity="center"
            android:maxLines="1"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:visibility="gone"
            app:layout_constraintRight_toLeftOf="@id/item_cost"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/select_item_ar_layout"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/circle_item_ar_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:scrollbars="horizontal">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <TextView
        android:id="@+id/instructions_bubble"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_instructions"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="30dp"
        android:paddingEnd="24dp"
        android:text="Move your phone around a table until you see white dots! (: Then Press button to begin! extra text here to test look"
        android:textSize="17sp"
        android:lineSpacingExtra="4dp"
        android:textAllCaps="false"
        android:textColor="#000000" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="88dp"
        android:foreground="@drawable/ic_keyboard_arrow_up_black_24dp"
        app:backgroundTint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:fabSize="auto" />

</android.support.constraint.ConstraintLayout>
