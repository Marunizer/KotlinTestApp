<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/restaurant_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="0dp">
    <!-- app:cardCornerRadius="20dp" -->
    <!--android:elevation="100dp" -->
    <!--android:layout_marginStart="4dp"-->
    <!--android:layout_marginEnd="4dp"-->

    <RelativeLayout
        android:id="@+id/restaurant_card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/restaurant_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="4dp"
            android:layout_alignParentTop="true"
            android:scaleType="fitCenter"
            android:background="@color/noni_theme"
            android:src="@drawable/noni_splash"/>

        <LinearLayout

            android:id="@+id/top_card_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/restaurant_image"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/restaurant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="6dp"
                    android:paddingStart="8dp"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/restaurant_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="6dp"
                    android:paddingEnd="8dp"
                    android:textSize="18sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="2dp"
            android:id="@+id/bottom_card_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_card_row"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/restaurant_emoji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:paddingStart="8dp"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/restaurant_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:paddingEnd="8dp"
                    android:textSize="18sp" />
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginTop="6dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="8dp"
            android:background="@color/app_bar_theme"
            android:layout_below="@id/bottom_card_row"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>